{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "группа требований": {
      "type": "string",
      "enum": ["РТК", "Зареестр", "Ликвидационная квота"],
      "description": "Группа требований кредитора"
    },

    "требования": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "подгруппа очередности": {
            "type": "string",
            "enum": ["1", "2", "3.1", "3.2", "3.3", "3.4"],
            "description": "Очередность удовлетворения требований"
          },
          "сумма требования": {
            "type": "number",
            "description": "Сумма требования в рублях"
          },
          "вид обязательства": {
            "type": "string",
            "enum": [
              "Ответственность",
              "компенсация",
              "возмещение за причинение вреда жизни или здоровью",
              "Расходы, связанные с причинением вреда здоровью",
              "Моральный вред, связанный с причинением вреда жизни",
              "Задолженность по заработной плате",
              "Задолженность по НДФЛ",
              "Задолженность по страховым взносам на обязательное пенсионное страхование",
              "Задолженность по страховым взносам на обязательное социальное страхование",
              "Задолженность по страховым взносам на ОМС",
              "Компенсация за несвоевременную выплату заработной платы",
              "Налоги (взносы) за работников",
              "Основной долг",
              "Проценты за пользование кредитом",
              "Неустойка",
              "Пени",
              "Штрафные санкции",
              "Госпошлина",
              "Судебные расходы",
              "Налог на прибыль",
              "Недоимка",
              "Исполнительский сбор",
              "Мораторные проценты",
              "Неустойка за просрочку основного долга",
              "Неустойка за просрочку процентов",
              "Штраф",
              "Другое"
            ],
            "description": "Тип обязательства или требования"
          },
          "основание": {
            "type": "string",
            "description": "Правовое основание для требования (ссылка на договор, судебное решение и т.д.)"
          }
        },
        "required": [
          "подгруппа очередности",
          "сумма требования",
          "вид обязательства",
          "основание"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["группа требований", "требования"],
  "additionalProperties": false
}
